<%- include('partials/feed-header') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h1 class="title"><%= event.title %></h1>
      <p><strong>Description:</strong> <br> <%= event.description %></p>
      <span><strong>Location</strong> : <%=event.location %></span>
      <br>
      <span><strong>Event Date:</strong>  <%= helper.dateFormatter(event.eventDate) %> <br> 
        <strong>Event Time: </strong><%= helper.timeFormatter(event.eventTime) %></span>
      <br>
      <span> <strong>Player Limit:</strong> <%=event.playerslimit %></span>
      <br>
      <span> <strong>Players Going:</strong> <%=event.going %></span>

      
      <div class="row justify-content-between spacing">
        <%#Going button %>
        <form class="col-1" action="/event/going/<%= event.id %>?_method=PUT" method="POST">
          <button class="btn btn-primary" type="submit"> Attend </button> 
        </form>


        <%#Delete button %>
        <%if(event.user == user.id){ %>
        <form action="/event/deleteevent/<%= event.id %>?_method=DELETE" method="POST" class="col-3">
          <button class="btn btn-danger" type="submit"> Delete Event </button>
        </form>
        <%}%>



      </div>
    </div>
    </div>
  </div>